<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_add_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/mytint"
    tools:context=".ParentAddChild"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="536dp"
        android:layout_margin="20dp"
        android:background="@drawable/rounded"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Please enter the child code provided by the teacher to add your child"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            />


        <EditText
            android:id="@+id/childname"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#5252CC"
            android:hint="Child Name"
            android:textColorHint="#5252CC"
            android:textSize="15dp" />


        <ImageButton
            android:id="@+id/imagechild"
            android:layout_width="286dp"
            android:layout_height="268dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_photo" />

        <TextView
            android:id="@+id/noAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(Tap to Upload)"
            android:textColor="#5252CC"
            android:textSize="15dp"
             />

        <Button
            android:id="@+id/button_addChild"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@id/radioGroup1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_btnfilled"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
