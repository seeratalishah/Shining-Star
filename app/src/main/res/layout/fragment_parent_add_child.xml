<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_layout"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Please enter the child code provided by the teacher to add your child"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/childname"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#5252CC"
            android:hint="Child Name"
            android:textColorHint="#5252CC"
            android:textSize="15dp" />


        <ImageButton
            android:id="@+id/imagechild"
            android:layout_width="286dp"
            android:layout_height="268dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_photo" />

        <TextView
            android:id="@+id/noAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(Tap to Upload)"
            android:textColor="#5252CC"
            android:textSize="15dp"
             />

        <Button
            android:id="@+id/button_addChild"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@id/radioGroup1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_btnfilled"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15dp" />

</LinearLayout>
